<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blackGray</item>
        <item name="colorPrimaryDark">@color/blackGray</item>
        <item name="colorAccent">@color/blackGray</item>
        <item name="actionMenuTextColor">@color/whiteSmoke</item>
    </style>


    <style name="ButtonStyle">
        <item name="android:layout_width">@dimen/material_component_button_min_width</item>
        <item name="android:layout_height">@dimen/material_component_button_height</item>
        <item name="android:layout_marginLeft">@dimen/material_layout_view_left_margin_8dp</item>
        <item name="android:layout_marginRight">@dimen/material_layout_view_right_margin_8dp</item>
        <item name="android:layout_marginStart">@dimen/material_layout_view_left_margin_8dp</item>
        <item name="android:layout_marginEnd">@dimen/material_layout_view_right_margin_8dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:text">@string/confirm</item>
        <item name="android:textColor">@color/snow</item>
        <item name="android:layout_marginBottom">@dimen/material_layout_view_bottom_margin_8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="ResultTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/hint_result</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:layout_marginBottom">@dimen/material_layout_view_bottom_margin_8dp
        </item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <style name="LayoutWidthMatchAndHeightWrapStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="LayoutWidthMatchAndHeightWrapStyle.LayoutItemStyle">
        <item name="android:layout_marginRight">@dimen/material_layout_view_right_margin_8dp</item>
        <item name="android:layout_marginEnd">@dimen/material_layout_view_right_margin_8dp</item>
        <item name="android:layout_marginLeft">@dimen/material_layout_view_left_margin_8dp</item>
        <item name="android:layout_marginStart">@dimen/material_layout_view_left_margin_8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LayoutWidthMatchAndHeightWrapStyle.EditViewStyle">

    </style>

    <style name="SeparatorStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/material_layout_separator_height_1dp</item>
        <item name="android:background">@color/gray_jia</item>
    </style>

</resources>
